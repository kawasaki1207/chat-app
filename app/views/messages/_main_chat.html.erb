
<div class="main-header">
  <div class="main-room">
    <div class="chat-name">RoomName</div>
  </div>

  <div class="chat-end">
    <div class="end-btn"><a href="#">チャットを終了する</a></div>
  </div>
</div>

<div class="main-chat">
  <div class="messages">
    <div class="user-date">
      <div class="name">テスト１</div>
      <div class="day">2022/3/14(Mon)1:40:00</div>
    </div>
    <div class="message-date">
      <div class="message">テスト１</div>
    </div>
  </div>

  <div class="messages">
    <div class="user-date">
      <div class="name">テスト２</div>
      <div class="day">2022/3/14(Mon)1:43:00</div>
    </div>
    <div class="message-date">
      <div class="message">テスト２</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: "main-footer", local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: "text", placeholder: "type a message" %>
    <label class="image">
      <span class="img">画像</span>
      <%= f.text_field :image, class: "img-file" %>
    </label>
  </div>
  <%= f.submit "送信",class: "send" %>
<% end %>

